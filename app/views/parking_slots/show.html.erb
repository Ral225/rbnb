<div class="container">
  <div class="image-container row justify-content-between mb-3">
    <div class="image col-8 img-fluid"  >
      <img src="https://media.istockphoto.com/photos/dealer-new-cars-stock-picture-id480652712?k=20&m=480652712&s=612x612&w=0&h=dbyTkQ3-PJJMAlNAR2hGxPWX1ODvSJspuDsdvQmOKlI=" class="w-100 h-100" alt="Responsive image">
    </div>
    <div class="map col-4">
      <%= image_tag 'index_map_placeholder.png', class: "map-size img-fluid" %>
    </div>
  </div>
  <div class="product-container row justify-content-between">
    <div class="description-container col-8">
     <h1> <%= @parkingslot.title %></h1>
        <h2><%= @parkingslot.description %></h2>
        <p>Location: <%= @parkingslot.address %></p>
        <p>Width: <%= @parkingslot.width %> m - Height: <%= @parkingslot.height %> m </p>
        <p>Security items: <%= @parkingslot.security %></p>
        <p>Price per day: <%= @parkingslot.price.round %> <%= @parkingslot.currency %></p>
    </div>
    <div class="booking-container col-4">
      <h2> <%= @parkingslot.price.round %> € per day </h2>
      <div class="check-box-container d-flex justify-content-center">
        <div class="check-in-box">
          <p><strong>Ckeck-in</strong></p>
              <%=form_with url: ""  do |form|  %>
                <%= form.date_field :query, placeholder: "Check-in", class:"form-date" %>
              <% end %>
        </div>
        <div class="check-out-box">
          <p><strong> Ckeck-out </strong></p>
              <%=form_with url: ""  do |form|  %>
                <%= form.date_field :query, placeholder: "Check-in", class:"form-date" %>
              <% end %>
        </div>
      </div>
        <div class="button-wrapper">
          <button type="button" class="button d-flex">Make a reservation</button>
        </div>
        <div class="booking-resume-container">
          <p>You won't be charged yet</p>
          <p><%= @parkingslot.price.round %> <%= @parkingslot.currency %> x 5 days</p>
          <hr>
          <p class ="line">Total = <%= @parkingslot.price.round * 5 %> € </p>
        </div>
    </div>
  </div>
</div>
