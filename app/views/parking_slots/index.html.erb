<div class="d-flex">
  <div style="width: 100%;">
    <div class="wrapper" id="title-sticky">
      <div class="nav-spacer"></div>
      <h1><%= @parkingslots.count%> parking slots found</h1>
    </div>
    <div class="wrapper" style="width: 100%; margin-top: 10px;">
      <% @parkingslots.each do  |element| %>
        <%= link_to parking_slot_path(element), class:"text-decoration-none" do %>
          <div class="card-small">
            <img src="https://source.unsplash.com/random/?parking" alt="">
            <div class="card-small-info">
              <h2><%= element.title %></h2>
                <p><%= element.address %></p>
                <p><%= element.price.to_i %> â‚¬ per day</p>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
  <div id="map" style="width: 100%; height: 100vh; z-index: 1;"
        data-controller="map"
        data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"
        data-map-markers-value="<%= @markers.to_json %>">
  </div>
</div>
