<div class="container">
  <div class="row" style= "padding-left: 12px; color: $black;">
      <h1><%= @parkingslots.count%> parking slots found near you</h1>
  </div>
  <div class="row">
    <div class="col">
      <div class="row" style="height: 100%">
          <% @parkingslots.each do  |element| %>
            <%= link_to parking_slot_path(element), class:"text-decoration-none" do %>
              <div class="card-small">
                <img src="https://source.unsplash.com/random/?parking" alt="">
                <div class="card-small-info">
                  <h2><%= element.title %></h2>
                    <p><%= element.address %></p>
                    <p><%= element.price.to_i %> â‚¬ per day</p>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
    </div>
    <div class="col">
      <div class="placeholder-map"></div>
    </div>
  </div>
</div>
