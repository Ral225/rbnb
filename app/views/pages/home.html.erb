<div class="banner" data-controller="banner">
    <div class="banner-content">
        <%= image_tag "banner-image-1.jpeg", class:"active", height: 100 %>
        <img src="//source.unsplash.com/1500x800?car" alt="" class="">
    </div>
      <div class="banner-wrapper">
          <h1>Find your parking.</h1>
          <p>Check for cheap and flexible parking slots.</p>
          <div class="banner-form">
              <div class="banner-form-item">
                <%= form_with url: "/search", method: :get, class: "nav-link p-0" do |form| %>
                  <div data-controller="address-autocomplete" data-address-autocomplete-api-key-value="<%= ENV["MAPBOX_API_KEY"] %>">
                    <%= form.text_field :address, placeholder: "Where?", class: "no-border display-none", data: {address_autocomplete_target: "address"} %>
                  </div>
                <% end %>
              </div>
              <div class="row">
                <div class="col-6 from">
                  <div class="banner-form-item">
                    <%= form_with url: "/search", method: :get, class: "nav-link" do |form| %>
                      <%= form.text_field :query, placeholder: "From?", class: "no-border" %>
                    <% end %>
                  </div>
                </div>
                <div class="col-6 until">
                  <div class="banner-form-item">
                    <%= form_with url: "/search", method: :get, class: "nav-link" do |form| %>
                      <%= form.text_field :query, placeholder: "Until?", class: "no-border" %>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
      </div>
    </div>
</div>
